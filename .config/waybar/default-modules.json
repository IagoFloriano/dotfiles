{
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "",
            "5": "",
            "6": "",
            "7": "",
            "8": "",
            "9": "",
            "magic": ""
        },
        "show-special": true,
        "persistent-workspaces": {
            "DP-1": 9
        },
        "on-click": ""
    },
    "hyprland/window":{
    },
    "cpu": {
        "format": "{usage}%",
        "tooltip": true,
        "tooltip-format": "Cpu:{usage}%"
    },
    "memory": {
        "format": "{used:0.2f}",
        "tooltip": true,
        "tooltip-format": "Ram:{used}/{total}",
    },
    "disk": {
        "format": ":{used}/{total}",
        "path": "/"
    },
    "disk#disk2": {
        "format": ":{used}/{total}",
        "path": "/media/SSD"
    },
    "disk#disk3": {
        "format": ":{used}/{total}",
        "path": "/media/HD"
    },
    "hyprland/language": {
        "format-en": "US",
        "format-en-intl": "INTL"
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "󰥔 {:%H:%M:%S %a %d}",
        "locale": "pt_BR.UTF8",
        "interval": 1
    },
    "clock#date": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "/{:%m/%y}",
        "locale": "pt_BR.UTF8",
        "interval": 1
    },
    "pulseaudio": {
        "scroll-step": 5,
        "format": "{icon} {volume}%",
        "on-click": "pavucontrol",
        "format-icons": ["","","",""],
        "format-muted": " {volume}%"
    },
    "tray": {
        "icon-size": 18,
        "reverse-direction": true
    },
    "battery": {
      "interval": 60,
      "format": "{capacity}%|{time}",
      "format-time": "{H}:{m}"
    },
    "group/disks": {
      "orientation": "horizontal",
      "modules": ["disk", "disk#disk2", "disk#disk3"],
      "drawer": {
        "transition-duration": 150,
        "children-class": "not-power",
        "transition-left-to-right": true
      }
    },
    "group/clocks": {
      "orientation": "horizontal",
      "modules": ["clock", "clock#date"],
      "drawer": {
        "transition-duration": 150,
        "children-class": "not-power",
        "transition-left-to-right": true
      }
    },
    "custom/weather": {
      "exec": "/home/yv/.config/waybar/weather.sh",
      "interval": 120,
      "exec-on-event": true
    }
}
