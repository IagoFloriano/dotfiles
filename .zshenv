export PATH="$HOME/.npm-global/bin:$HOME/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export GHCUP_USE_XDG_DIRS="TRUE"
export QT_QPA_PLATFORMTHEME="qt5ct"
